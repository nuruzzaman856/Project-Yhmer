@page
@model YHmer.Pages.SkillAndSearchProfile.SkillsModel
@{
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 ">
            <partial name="_StudentSideBarPartial" />
        </div>
        <div class="box">
            <h1>Kunskap</h1>
            <p class="helptext">Se mer om specifik Kunskap via knappval.</p>
            <div class="col-lg-12">
                <div class="main-box clearfix">
                    <div class="table-responsive">

                        <table class="table user-list">
                            <thead>
                                <tr>
                                    <th><span>Namn</span></th>
                                    <th><span>Kunskap Nivå</span></th>
                                    <th><span>År av erfarenhet</span></th>
                                    <th><span>Är verifierad</span></th>
                                    <th><span>Skapad</span></th>
                                </tr>
                            </thead>
                            @foreach (var skill in Model.receivedSkills)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            @skill.Name
                                        </td>
                                        <td>
                                            @skill.SkillLevel
                                        </td>
                                        <td>
                                            @skill.YearsOfSkill
                                        </td>
                                        @if (skill.IsVerified)
                                        {
                                            <td>
                                                Ja
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                Nej
                                            </td>
                                        }
                                        <td>
                                            @skill.Created
                                        </td>
                                        <td>
                                            <form class="minibuttons" method="post" name="DeleteCourse">
                                                <input value="@skill.Id" hidden name="SelectButton" />
                                                <input value="RedirectToInfo" hidden name="ReDirectToInfo" />
                                                <a class="table-link info" onclick="this.parentElement.submit()">
                                                    <span class="fa-stack" style="color: #0366d6;">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-info-circle fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>

                                            </form>
                                            @if (Model.ProfileRole == "root")
                                            {
                                                <form class="minibuttons" method="post">
                                                    <input value="@skill.Id" hidden name="SelectButton" />
                                                    <a onclick="this.parentElement.submit()" href="#" class="table-link danger">
                                                        <span class="fa-stack">
                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                            <i class="fa fa-times fa-stack-1x fa-inverse"></i>
                                                        </span>
                                                    </a>
                                                </form>
                                            }
                                        </td>

                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <form method="post">
        <button type="submit" name="AddSkillDirector" class="btn btn-primary" value="AddSkill">Lägg till Kunskup</button>
    </form>
    <hr />
    <div>
        <a href="../Profiles/Profile">Tillbaka</a>
    </div>


</div>


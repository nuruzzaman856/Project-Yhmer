@page
@model YHmer.Pages.Profiles.Organizer.AddSchoolModel
@{
}


@if (Model.SchoolId == null)
{
    <h1>Lägg till underordnad skola</h1>
}
else
{
    <h1>Uppdatera skola</h1>
}

<br />
<div class="col">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" name="Header"></div>
            <div class="form-group">
                <label class="control-label">Skol namn</label>
                <input asp-for="@Model.Name" class="form-control" name="Name" type="text" />
                <span class="text-danger" name="ErrorSpan"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Org nummer</label>
                <input asp-for="@Model.Orgnr" class="form-control" name="orgnr" type="text" />
                <span asp-validation-for="@Model.Orgnr" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Kontakt person</label>
                <input asp-for="@Model.ContactPerson" class="form-control" name="ContactPerson" type="text" />
                <span asp-validation-for="@Model.ContactPerson" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Kontakt uppgifter</label>
                <input asp-for="@Model.Contacts" class="form-control" name="Contacts" type="text" /> @*Kom ihåg att ta bort negativa tal*@
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Adress</label>
                <input asp-for="@Model.StreetAdress" class="form-control" name="StreetAdress" type="text" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Postkod</label>
                <input asp-for="@Model.PostalCode" class="form-control" name="PostalCode" type="text" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Postort</label>
                <input asp-for="@Model.PostalArea" class="form-control" name="PostalArea" type="text" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Stad</label>
                <input asp-for="@Model.City" class="form-control" name="City" type="text" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Om skolan</label>
                <textarea name="About" cols="40" rows="4" class="form-control">@Model.About</textarea>
                <span class="text-danger"></span>
            </div>


            @if (Model.SchoolId == null)
            {
                <div class="form-group">
                    <input type="submit" value="Lägg till" class="btn btn-primary" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Uppdatera" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a href="../Organizer/Schools">Tillbaka</a>
</div>
@page
@model YHmer.Pages.Profile.ProfileModel
@{
}



<div class="container-fluid">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="list-group ">
                @if (Model.ProfileRole == "student")
                {

                    <partial name="_StudentSideBarPartial" />
                }
                else if (Model.ProfileRole == "company" && Model.StudentId == null)
                {
                    <partial name="_CompanySideBarPartial" />

                }
                else if (Model.ProfileRole == "organizer")
                {
                    <partial name="_OrganizerSideBarPartial" />

                }
                else if (Model.ProfileRole == "root")
                {
                    <partial name="_AdminSideBarPartial" />
                }
            </div>

            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://media.istockphoto.com/vectors/default-profile-picture-avatar-photo-placeholder-vector-illustration-vector-id1223671392?b=1&k=6&m=1223671392&s=612x612&w=0&h=5VMcL3a_1Ni5rRHX0LkaA25lD_0vkhFsb1iVm1HKVSQ=" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                @if (Model.StudentId == null)
                                {
                                    <a href="/Profiles/EditProfile" target="_self"><button class="btn btn-primary">Redigera</button></a>
                                    <a href="/Profiles/MatchMessages" target="_self"><button class="btn btn-primary">Meddelanden</button></a>
                                    @*<a href="/Calender" target="_self"><button class="btn btn-primary">Kalender</button></a>*@
                                }


                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6>Om</h6>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <p>
                                @Model.UserProfile.About
                            </p>
                        </li>
                    </ul>
                </div>
                @if (Model.StudentId == null)
                {
                    <a href="/Review" target="_self" style="width : 1.5625rem; height: 1.5625rem; margin-center:1rem"><button class="btn btn-primary">Omdöme</button></a>
                }

            </div>
            <div class="col-md-6">
                <div class="card mb-3">

                    <div class="card-body">
                        @if (Model.ProfileRole == "student" || Model.StudentId != null)
                        {
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Användare</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.UserProfile.FirstName @Model.UserProfile.LastName
                                </div>
                            </div>
                           
                        }
                        else if (Model.ProfileRole == "company" && Model.StudentId == null)
                        {
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Företagsnamn</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.UserProfile.CompanyName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Orgnr</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.UserProfile.OrgNumber
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Kontaktperson</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.UserProfile.ContactPerson
                                </div>
                            </div>
                        }
                        else if (Model.ProfileRole == "organizer")
                        {
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Anordnare</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.UserProfile.CompanyName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Kontaktperson</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.UserProfile.ContactPerson
                                </div>
                            </div>
                        }

                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserProfile.email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Telefon</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserProfile.phoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adress</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserProfile.Adress
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Postkod</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserProfile.PostalCode
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Postort</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserProfile.PostalArea
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Stad</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserProfile.City
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.ProfileRole == "student" || Model.StudentId != null)
                {
                    <div class="row gutters-sm">
                        <div class="col-sm-12 mb-12">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2"></i>Erfarenhet och Kompetens</h6>
                                    @if (Model.Skills != null)
                                    {
                                        @foreach (var skill in Model.Skills)
                                        {
                                            <small>@skill.Name</small>
                                            <div class="progress mb-3" style="height: 5px">
                                                @switch (skill.SkillLevel)
                                                {
                                                    case "Teoretisk":
                                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 20%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                                        break;
                                                    case "Rookie":
                                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 40%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                                        break;
                                                    case "Medel":
                                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 60%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                                        break;
                                                    case "Hög":
                                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                                        break;
                                                    case "Professionell":
                                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                                        break;
                                                    default:
                                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 0%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                                        break;
                                                }
                                            </div>
                                        }
                                    }

                                    @*<small>Web Design</small>
        <div class="progress mb-3" style="height: 5px">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <small>Website Markup</small>
        <div class="progress mb-3" style="height: 5px">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <small>One Page</small>
        <div class="progress mb-3" style="height: 5px">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <small>Mobile Template</small>
        <div class="progress mb-3" style="height: 5px">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <small>Backend API</small>
        <div class="progress mb-3" style="height: 5px">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
        </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>





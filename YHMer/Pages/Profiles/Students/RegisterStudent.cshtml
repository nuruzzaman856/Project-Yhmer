@page
@model YHmer.Pages.Profiles.Students.RegisterStudentModel
@{

}

<h1>Registrera till utbildning</h1>

<div class="col">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" name="Header"></div>
            <div class="form-group">

                <label class="control-label">Utbildningskod</label>
                <input value="@Model.EducationRegistrationCode" class="form-control" name="EducationRegistrationCode" id="EducationRegistrationCode" type="text" />
                <span class="text-danger" name="ErrorSpan"></span>
            </div>
            <div>
                <span style="color: red;">
                    @Model.UnsuccessfulErrorMessage
                </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrera" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Profiles/Profile">Tillbaka</a>
</div>
